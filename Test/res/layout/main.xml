<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/line"
              android:background="@drawable/image2">
    <TextView android:id="@+id/textView1"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="请输入服务端IP："
              android:textColor="@android:color/background_dark"/>
    <EditText android:id="@+id/editText1"
              android:layout_width="328dp"
              android:layout_height="wrap_content"
              android:singleLine="true"
              android:inputType="text"
              android:background="@android:drawable/alert_light_frame"
              android:textColor="@android:color/background_dark"
              android:textCursorDrawable="@null" android:clickable="true"/>
    <TextView android:id="@+id/textView2"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="端口：" android:textColor="@android:color/background_dark"/>
    <EditText android:id="@+id/editText2"
              android:layout_width="86dp"
              android:layout_height="wrap_content"
              android:singleLine="true"
              android:background="@android:drawable/alert_light_frame"
              android:inputType="text"
              android:textColor="@android:color/background_dark"
              android:textCursorDrawable="@null"/>
    <Button
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:text="连接"
            android:id="@+id/button" android:layout_gravity="center_horizontal" android:enabled="true"
            android:textColor="#ff1f86ff" android:background="#ff37ff2a"
            android:clickable="false"/>
</LinearLayout>

